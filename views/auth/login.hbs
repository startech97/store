<div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a href="#login">войти</a></li>
        <li class="tab col s6"><a class="active" href="#register">регистрация</a></li>

      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
        {{#if loginError}}
            <p class="alert">{{loginError}}</p>
        {{/if}}
            <h3>Войти</h3>
            <form action="/auth/login" method="POST">
            <div class="input-field">
            <input name="email" id="email" type="text" class="validate" required>
            <label for="email">email</label>
            <span class="helper-text" data-error="введите email"></span>
            </div>

            <div class="input-field">
            <input name="password" id="password" type="password" class="validate" required>
            <label for="password">Пароль</label>
            <span class="helper-text" data-error="введите пароль"></span>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button class="btn btn-primary">Войти</button>
            </form>
    </div>
    <div id="register" class="col s6 offset-s3">
        {{#if error}}
            <p class="alert">{{error}}</p>
        {{/if}}
            <h3>Регистрация</h3>
            <form action="/auth/register" method="POST">
                <div class="input-field">
                    <input name="email" id="remail" type="text" class="validate" required>
                    <label for="remail">email</label>
                    <span class="helper-text" data-error="введите email"></span>
                </div>

                <div class="input-field">
                    <input name="password" id="rpassword" type="password" class="validate" required>
                    <label for="rpassword">пароль</label>
                    <span class="helper-text" data-error="введите пароль"></span>
                </div>

                <div class="input-field">
                    <input name="confirm" id="confirm" type="password" class="validate" required>
                    <label for="confirm">повторите пароль</label>
                    <span class="helper-text" data-error="повторите пароль"></span>
                </div>
              

                <div class="input-field">
                    <input name="name" id="name" type="text" class="validate" required>
                    <label for="name">Ваше имя</label>
                    <span class="helper-text" data-error="введите имя"></span>
                </div>
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <button class="btn btn-primary">Зарегистрироваться</button>

            </form>
    </div>

  </div>