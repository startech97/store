<h1>Корзина</h1>

{{#if courses.length}}
 <div id="cart">
        <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id="{{_id}}" data-csrf="{{@root.csrf}}">Удалить</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p><strong>Цена:</strong><span class="price">{{price}}</span></p>
    <form action="/orders" method="POST">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn">Сделать заказ</button></form>
 </div>
{{else}}
<p>Корзина пуста</p>
{{/if}}